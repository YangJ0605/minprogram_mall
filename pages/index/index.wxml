<!--pages/index.wxml-->
<!-- 轮播图 -->
<m-swiper list = '{{banners}}' />
<!-- 推荐 -->
<m-recommend recommends='{{recommends}}' />

<!-- tab-control -->
<m-tab-control titles = "{{titles}}" bind:indexTabClick='tabClick' /> 

<!-- goods -->
<view class="m-goods">
  <block wx:for='{{goods[currentType].list}}' wx:key='index'>
    <view class="goods-item">
      <view style="background: url('{{item.show.img}}')" class="item-image"></view>
      <view class="text">{{item.title}}</view>
    </view>
  </block>
</view>