<!--pages/cart/cart.wxml-->
<scroll-view class="m-cart" scroll-y>
  <view class="item">
    <block wx:for='{{cartList}}' wx:key='index'>
      <view class="item-list">
         <view class="item-icon">
          <m-check-button isSelected='{{isSelected }}' 
          bind:tap="itemCheckClick"
          data-iid="{{item.iid}}"/> 
        </view>
        <view class="item-image">
          <image src="{{item.imageURL}}" mode='aspectFill'></image>
        </view>
        <view class="item-info"> 
          <view class="shop-name">{{item.name}}</view>
          <view class="title">{{item.title}}</view>
          <view class="desc">{{item.desc}}</view>
          <view class="price-count">
            <view class="price">¥{{item.price}}</view>
            <view class="count">
              <text class="add">-</text>
              <text class="count-text">{{item.count}}</text>
              <text class="reduce">+</text>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
</scroll-view> 
<view class="bottom-bar">
  <m-check-button isSelected = '{{isSelectedAll}}'><text>全选</text> </m-check-button>
  <view class="left">
    <text>合计:</text>
    <text class="price">¥0.00</text>
  </view>
  <view class="right">
    <button size="mini" class="button">去结算(0)</button>
  </view>
</view>