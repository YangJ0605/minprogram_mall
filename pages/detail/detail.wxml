<!--pages/detail/detail.wxml-->
<scroll-view class="detail"
             scroll-y='{{true}}'
             bindscroll="scroll"
             scroll-top='{{scrollTop}}'>
  <m-swiper list='{{swiperImages}}' height='height' />
  <m-titles-info content="{{titlesInfo}}" />
  <m-shop-info shopInfo = "{{shopInfo}}"/>
  <m-detail-info detailInfo='{{detailInfo}}' />
  <m-param-info paramInfo='{{paramInfo}}' />
  <m-comments-info commentsInfo='{{commentsInfo}}' />
</scroll-view>
<m-back-top wx:if='{{isShowBackTop}}' bindtap='backtop'/>