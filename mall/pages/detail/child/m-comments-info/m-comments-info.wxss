/* pages/detail/child/m-comments-info/m-comments-info.wxss */
.m-comments-info {
  padding: 50rpx 30rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
}

.user {
  margin: 30rpx 0;
}

.user .user-image {
  width: 84rpx;
  height: 84rpx;
  vertical-align: middle;
  border-radius: 42rpx;
} 

.user .user-text {
  vertical-align: middle;
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #666;
}

.comment {
  font-size: 28rpx;
  text-indent: 1.5em;
  line-height: 1.5;
}

.other-info {
  display: flex;
  font-size: 24rpx;
  margin-top: 20rpx;
  color: #888;
}

.other-info .time {
  margin-right: 10rpx;
}

.picture {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.picture .picture-image {
  max-width: 30%;
}
.else {
  margin-top: 20rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}